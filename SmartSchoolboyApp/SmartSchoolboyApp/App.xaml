                <ResourceDictionary Source="/Thems/TextBlockStyle.xaml"/>
                <ResourceDictionary Source="/Thems/TextBoxStyle.xaml"/>
                <ResourceDictionary Source="/Thems/UIColors.xaml"/>
                <ResourceDictionary Source="/Thems/BorderStyle.xaml"/>
                <ResourceDictionary Source="/Thems/SplitterStyle.xaml"/>
                <ResourceDictionary Source="/Thems/VerticalScrollBarStyle.xaml"/>
