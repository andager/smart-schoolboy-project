<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="listViewBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
    </Style>

    <Style x:Key="listViewBorderItem" TargetType="{x:Type Border}">
        
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="Background" Value="{StaticResource panelOverColor}"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource panelActiveColor}"/>
            </Trigger>
        </Style.Triggers>
        
    </Style>

    <Style x:Key="backBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource brushGradient}"/>
        <Setter Property="Background" Value="{StaticResource backgroundGradient}"/>
    </Style>
    
</ResourceDictionary>