<UserControl x:Class="SmartSchoolboyApp.Thems.UserControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartSchoolboyApp.Thems.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <PasswordBox x:Name="pBoxPassword" MaxLength="25" Style="{StaticResource pBoxLogin}">
        <PasswordBox.Background>
            <ImageBrush ImageSource = "/Images/Icons/key-icon.png" Stretch="Uniform" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
    
</UserControl>
